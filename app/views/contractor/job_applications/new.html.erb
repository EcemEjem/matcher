<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://unsplash.it/1024/600/?job);">
  <div class="banner-content">
    <h2>Apply to this job offer</h2>
    <h3>
      <em><%= @job_offer.name %></em>
    </h3>
    <%#   = link_to "Apply now", new_contractor_job_job_application_path(@job), class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="wrapper-grey">
    <div class="container">
  <div class="row">

    <div class="col-md-7 col-xs-12">
      <div class="box2">
        <%= simple_form_for @job_application, url: contractor_job_job_applications_path(@job_offer) do |f| %>

        <%= f.input :motivation_letter %>
        <%= f.submit 'Apply', class: "btn btn-primary btn-lg"  %>
        <% end %>
      </div>     
    </div>

    <div class="col-md-5 col-xs-12">
      <div class="box2">
        <p><strong>Date:</strong> <%= @job_offer.start_date %></p>
        <p><strong>Wage:</strong> $ <%= @job_offer.wage %> </p>
        <p><strong>City:</strong> <%= @job_offer.city %></p>
        <p><strong>Address:</strong> <%= @job_offer.address %></p>
      </div>     
    </div>
  </div>
    </div>
</div>
