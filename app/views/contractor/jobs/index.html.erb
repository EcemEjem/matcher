<h2 class="anchor text-center">Job Opportunities</h2>
<% if params[:location].empty?%>
  <h4 class="text-center padding-bottom"> All Locations and Dates </h4>
<% else %>
  <h4 class="text-center padding-bottom"><%= params[:location] %></h4>
<% end %>

<div class="container">
  <div class="margin_top_40">
    <div class="row">
      <% @jobs.each do |job| %>
        <div class="col-xs-12 col-md-4">
            <div class="card">
              <%= cl_image_tag job.photo, crop: :fill, class: 'card-img-top' %>
              <div class="card-block">
                <h2 class="card-title"><%= job.name %></h2>
                <h4 class="card-title">Wage: <%= job.wage %> $ - <%= job.city %></h4>
                <div class="meta"><%= job.start_date %> - <%= job.end_date %>
                </div>
                <div class="meta"><%= job.duration %> days
                </div>
                <%= link_to 'See job', contractor_job_path(job), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
