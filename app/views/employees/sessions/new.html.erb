<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'nyc_try.png' %>);">
  <div class="banner-content">
    <h2>Log in as an employee</h2>
    <h3>
      <em></em>
    </h3>
  </div>
</div>

<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box2">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h3>Log in as an employee</h3>

          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
            <%= render "employees/shared/links" %>
          </div>
          <% end %>
        </div>     
      </div>
    </div>
  </div>
</div>
