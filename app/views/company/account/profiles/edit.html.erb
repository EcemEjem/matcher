<div id="bg"></div>
<%= simple_form_for @profile, url:company_account_profile_path(@profile) do |f|  %>
<h1 style="color:white">Edit your company profile</h1>
    <label for=""></label>
    <%= f.input :name, required: true, name:"", id:"", placeholder:"name", class:"email"  %>
    <label for=""></label>
    <%= f.input :industry, required: true, industry:"", id:"", placeholder:"industry", class:"email" %>
    <label for=""></label>
    <%= f.input :description, required: true, description:"", id:"", placeholder:"description", class:"email" %>
    <label for=""></label>
    <%= f.input :email, required: true, autofocus: true, email:"", id:"", placeholder:"email", class:"email" %>
    <label for=""></label>
    <%= f.input :password, required: true, password:"", id:"", placeholder: "password", class:"pass", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
     <%= f.input :photo %> <%= f.input :photo_cache, as: :hidden %> <%= f.submit %>
<% end %>
