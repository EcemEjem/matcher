<div class="container anchor">
  <div class="wrapper-white">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= link_to "Edit", edit_company_account_profile_path(@job) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sx-12">
      <div class="profile-title">
        <h2>Welcome <strong>"<%= current_company.name %>"</strong> to your company profile</h2>
      </div>
    </div>
  </div>
  <div class="profile-details">
    <p>Profile Details</p>
    <p>Name: <%= current_company.name %></p>
    <p>Industry: <%= current_company.industry %></p>
  </div>
</div>
<div class="container">
  <div class="row">
    <% current_company.job_offers.each do |job_offer| %>
    <div class="col-xs-12 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.2)), url('<%= job_offer.photo.present? ? cl_image_path(job_offer.photo, height: 200, width: 200, crop: :fill) : image_path('01_city.jpg') %>');">
        <div class="title-name"><h4><%= job_offer.name %></h4></div>
        <div class="title-card"><h3><%= job_offer.city %></h3></div>
        <div class="card-description">
          <h4><%= job_offer.job_applications.count %> Applicants</h4>
          <%= link_to "VIEWÂ JOB", company_account_job_path(job_offer) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= link_to "See all offers",company_account_jobs_path, class: "ui grey button" %>
        <%= link_to "Add Job Offer",new_company_account_job_path, class: "ui green button add-job-offer" %>
      </div>
    </div>
  <div class="row">
    <% @job_applications.each do |job_application| %>
    <div class="col-xs-12 col-md-4">
      <div class="card-account">
        <div class="image">
          <%= image_tag 'profile.jpg' %>
        </div>
        <div class="content">
          <h2><%= job_application.employee.first_name %></h2>
          <h4><%= job_application.job_offer.name %></h4>
          <div class="meta">
            <span class="date">Joined in 2013</span>
          </div>
          <div class="description">
            Kristy is an art director living in New York.
          </div>
        </div>
        <div class="extra content">
          <a>
            <i class="user icon"></i>
            22 Friends
          </a>
        </div>
      </div>
    </div>
    <% end  %>
  </div>

</div>
