<div class="company-profile-header anchor" style="text-align:center;">
  <h1>Welcome <%= current_company.name %> to your company profile</h1>
</div>
<div class="wrapper-grey">
  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="profile-details">
        <p>Profile Details</p>
        <p><%= image_tag current_company.photo, height: 150, width: 150 %></p>
      </div>
    </div>
      <div class="col-xs-12 col-md-4">
        <p>Name: <%= current_company.name %></p>
        <p>Industry: <%= current_company.industry %></p>
        <p>Description: <%= current_company.description %></p>
        <p><%= link_to 'Edit', edit_company_account_profile_path(@job) %></p>
      </div>
    <div class="col-xs-12 col-md-4">
      <div>
        <p><%= link_to "See all offers",company_account_jobs_path, class: "ui grey button" %></p>
        <p><%= link_to "Add Job Offer",new_company_account_job_path, class: "ui green button" %></p>
      </div>
    </div>
  </div>
</div>
</div>
  <div class="container anchor">
    <div class="row">
      <% current_company.job_offers.each do |job_offer| %>
        <div class="col-xs-12 col-md-4">
          <%= link_to company_account_job_path(job_offer) do %>
            <div class="card" style="background-color: #FAEBD7" >
              <div class="col-xs-12 col-md-6">
                <div class="job-offer-picture" style="margin-top: 10px;"><%= job_offer.photo.present? ? cl_image_tag(job_offer.photo, height: 100, width: 100, crop: :fill) : image_tag('01_city.jpg') %></div>
              </div>
              <div class="col-xs-12 col-md-6">
                <div id="title-name"><p>Position: <%= job_offer.name %></p></div>
                <div id="title-city"><p>City: <%= job_offer.city %></p></div>
              </div>
              <div class="card-description">
                <p><%= unread_job_offer_applications_count(job_offer) %> New Applicants</p>
                <p><%= job_offer.job_applications.count %> Applicants</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="suggested_employee anchor">
      <h4>Suggested Employee <%= current_company.industry %></h4>
    </div>
    <div class="row">
      <% @suggested_employees.each do |suggested_employee| %>
        <div class="col-xs-12 col-sm-6 col-md-3" >
          <div class="suggested-employee-avatar">
            <% if current_employee.provider == 'linkedin' %>
                <%= cl_image_tag current_employee.linkedin_photo_url, height: 100, width: 100, crop: :fill %>
              <% else  %>
                <%= cl_image_tag current_employee.photo, height: 100, width: 100, crop: :fill %>
            <% end %>
          </div>
          <%= link_to "#{current_employee.first_name} #{current_employee.last_name}" %>
        </div>
      <% end %>
    </div>
  </div>

