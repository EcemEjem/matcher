<h1 class="anchor header-job offer">You have No... of  Applicants for this position</h1>
<div class="container">
   <div class="row">
    <div class="col-xs-12">
      <div class="description">
        <p>Event: <%= @job.event %></p>
        <p>Name: <%= @job.name %></p>
        <p>City: <%= @job.city %></p>
        <p>Description: <%= @job.job_description %></p>
        <p>Duration: <%= @job.start_date %> - <%= @job.end_date %></p>
        <p>Wage: <%= @job.wage %> $ </p>
       </div>
     </div>
    <% @job.job_applications.each do |job_application| %>
    <div class="col-xs-12 col-md-4">
      <div class="card-account">
        <div class="image">
          <%= cl_image_tag(job_application.employee.photo, height: 150, width: 150, crop: :fill) %>
        </div>
        <div class="content">
          <h4><%= job_application.employee.first_name %></h4>
          <h4><%= job_application.job_offer.name %></h4>
          <div class="meta">
            <span class="date">Joined in 2013</span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= link_to "edit this job", edit_company_account_job_path %> |
